<script>
const modalMsg = document.getElementById("success_message");
if ($("#contactUsForm").length > 0) {
$("#contactUsForm").validate({
rules: {
first_name: {
required: true,
maxlength: 20
},
last_name: {
required: true,
maxlength: 20
},
email: {
required: true,
maxlength: 50,
email: true,
},  
company: {
required: true,
maxlength: 20
},
designation: {
required: true,
maxlength: 20
},   
},

messages: {
first_name: {
required: "Please enter first name",
maxlength: "Your first name maxlength should be 20 characters long."
},
last_name: {
required: "Please enter last name",
maxlength: "Your last name maxlength should be 20 characters long."
},
email: {
required: "Please enter valid a email",
email: "Please enter valid email",
maxlength: "The email name should less than or equal to 50 characters",
},   
company: {
required: "Please enter company",
maxlength: "Your company name maxlength should be 20 characters long."
},
designation: {
required: "Please enter designation",
maxlength: "Your designation maxlength should be 20 characters long."
},

},
submitHandler: function(form) {
$.ajaxSetup({
headers: {
'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
}
});
$('#submit').html('Please Wait...');
$("#submit"). attr("disabled", true);
$.ajax({
url: "https://www.insightpublicis.com/store-form",
type: "POST",
data: $('#contactUsForm').serialize(),
success: function( response ) {
$('#submit').html('Submit');
$("#submit"). attr("disabled", true);
// alert('Personal information has been submitted successfully');
modalMsg.classList.add("alert");
modalMsg.innerText = "Personal information has been submitted successfully! \n Report has been sent to your email address";
// document.getElementById("contactUsForm").reset(); 
setTimeout(() => {
    window.location.reload()
}, 5000); 
}
});
}
})
}
</script>